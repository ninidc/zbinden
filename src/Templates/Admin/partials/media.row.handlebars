<div class="row-fluid media-row">

    <input type="hidden" name="meta-key[]" value="{{mkey}}" />
    <input type="hidden" name="meta-data[]" value="{{data}}" />
    
    <div class="col-md-3">
        <img src="/web/uploads/medias/{{file}}?h=200" style="max-height: 150px; max-width: 150px" />
    </div>
    
    <div class="col-md-8">
        <p>
            <strong>{{title}}</strong><br />
            {{#if resume}}{{resume}}<br />{{/if}}
            {{#if date}}{{date}}<br />{{/if}}
            {{#if mime_type}}{{mime_type}}<br />{{/if}}
        </p>
    </div>

    <div class="col-md-1">
        <a href="#" class="media-delete pull-right" onclick="ND.mediaSelector.remove($(this)); return false;">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
    
    <div class="clearfix"></div>
</div>

<style>
.media-row {
    padding-top: 10px;
    padding-bottom: 10px;
    margin-bottom: 15px;
    background-color: #f5f5f5;
}

.media-row:hover {
    background-color: #f5f5f5;
    cursor: pointer;
    border-radius: 5px;
}

</style>